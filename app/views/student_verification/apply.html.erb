<div class="page" id="top">            
    <!-- Home Section -->
    <section class="home-section bg-dark-alfa-50 " data-background=<%= asset_url("full-width-images/landing.jpg")%> style='background-image:url(<%= asset_url("full-width-images/landing.jpg")%>)' id="home">
       <div class="container">            
            <!-- Hero Content -->
            <div class="home-content">
                <div class="home-text" style="    padding: 100px 0px 45px 0px;">
                    
                    <h1 class="hs-line-8 no-transp font-alt mb-50 mb-xs-30">
                       Verification
                    </h1>                    
                    <div class="local-scroll hidden-xs">
                       <%= link_to "Apply", apply_path, :class => "btn btn-mod btn-border-w btn-medium btn-round", :style =>"background: #fff;color: #111;border-color: transparent;" %>
                        <span>&nbsp;</span>
                        <%= link_to "Status", status_path, :class => "btn btn-mod btn-border-w btn-medium btn-round" %>
                        <span>&nbsp;</span>
                        <%= link_to "History", history_path, :class => "btn btn-mod btn-border-w btn-medium btn-round" %>
                    </div>                    
                </div>
            </div>
            <!-- End Hero Content -->            
       </div>
    </section>
    <!-- End Home Section -->


    <!-- Section -->
    <section class="page-section">
      <div class="container relative">
          
<!--                     <h2 class="section-title font-alt mb-70 mb-sm-40">
              Different Types
          </h2> -->
          
          <!-- Row -->
          <div class="row">
              
              <!-- Col -->
              
              <div class="col-sm-4 mb-40">
                  
                  <!-- Form -->
                  <form method="post" action="#" id="form" role="form" class="form">
                      
                      <div class="mb-20 mb-md-10">
                          <select class="input-md form-control">
                              <option>One</option>
                              <option>Two</option>
                              <option>Three</option>
                          </select>
                      </div>

                      <div class="mb-20 mb-md-10">
                          <!-- Name -->
                          <input type="text" name="name" id="name" class="input-md form-control" placeholder="Name" maxlength="100">
                      </div>

                       <div class="mb-20 mb-md-10">
                          <!-- Hallticket Number -->
                          <input type="text" name="hallticket_no" id="hallticket_no" class="input-md form-control" placeholder="Hallticket Number" maxlength="100">
                      </div>
                      
                      <div class="mb-20 mb-md-10">
                          <label for="exampleInputFile">
                              Document
                          </label>
                          <input type="file" id="#">
                          <p class="help-block">
                              Upload Document to be verified
                          </p>
                      </div>

                      <div class="align-right pt-10 form-group">                            
                        <%= submit_tag "Add", :class => "submit_btn btn btn-mod btn-medium btn-round"%>
                      </div>
                      
                                                  
                  </form>
                  <!-- End Form -->
                  
              </div>
              
              <!-- End Col -->
              
              <!-- Col -->
              
              <div class="col-sm-8 mb-40 table-responsive scrollable-table">
                  <table class="table table-striped ">
                    <thead>
                      <tr>
                        <th>College</th>
                        <th>Name</th>
                        <th>Hallticket Number</th>
                        <th>Document</th>
                        <th>Fees</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>xyz</td>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                        <td>Rs 1,000</td>
                      </tr>
                      <tr>
                        <td>xyz</td>
                        <td>Jacob</td>
                        <td>Thornton</td>
                        <td>@fat</td>
                        <td>Rs 500</td>
                      </tr>
                
                    </tbody>
                  </table>
                  <div class="clearfix">
                                    
                    <div class="cf-left-col " style="text-align: right;">
                      <div class="ci-text" style="font-size: 25px;">Amount payable Rs 2,625</div>                       
                      <div class="form-tip"><i class="fa fa-info-circle"></i> 5% service charge applied</div>
                    </div>
                    
                    <div class="cf-right-col">
                        
                        <!-- Send Button -->
                        <div class="align-right pt-10 form-group">                            
                          <%= submit_tag "Procced to pay", :class => "submit_btn btn btn-mod btn-medium btn-round"%>
                        </div>
                        
                    </div>
                      
                  </div>
                  
                  
                  
              </div>
              
              <!-- End Col -->
              
          
          </div>
          <!-- End Row -->
          
      </div>
  </section>
    <!-- End Section -->
</div>