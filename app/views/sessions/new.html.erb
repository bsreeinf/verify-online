<% provide(:title, 'Log in') %>



<!-- Contact Form -->                            
<div class="row">
    <div class="col-md-6 ">
         <%= form_for(:session, url: login_path, :html => {:class => 'form contact-form', :id => 'contact_form'}) do |f| %>
        <!-- <form class="form contact-form" id="contact_form"> -->
            <div class="clearfix">
                
                <div class="cf-left-col">
                    
                    <!-- Name -->
                    <div class="form-group">                       
                        <%= f.text_field :name , :class => "input-md round form-control",:placeholder =>"Name", :pattern=>".{3,100}" %>
                    </div>
                    
                    <!-- Email -->
                    <div class="form-group">
                        <input type="email" name="email" id="email" class="input-md round form-control" placeholder="Email" pattern=".{5,100}" required>
                    </div>
                    
                </div>
                
                <div class="cf-right-col">
                    
                    <!-- Message -->
                    <div class="form-group">                                            
                        <textarea name="message" id="message" class="input-md round form-control" style="height: 84px;" placeholder="Message"></textarea>
                    </div>
                    
                </div>
                
            </div>
            
            <div class="clearfix">
                
                <div class="cf-left-col">
                    
                    <!-- Inform Tip -->                                        
                    <div class="form-tip pt-20">
                        <i class="fa fa-info-circle"></i> All the fields are required
                    </div>
                    
                </div>
                
                <div class="cf-right-col">
                    
                    <!-- Send Button -->
                    <div class="align-right pt-10">
                        <button class="submit_btn btn btn-mod btn-medium btn-round" id="submit_btn">Submit Message</button>
                    </div>
                    
                </div>
                
            </div>
            
            
            
            <div id="result"></div>
        <!-- </form> -->
        <% end %>
        
    </div>
</div>
<!-- End Contact Form -->